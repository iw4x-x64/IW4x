import nasm%buildfile{rules}

intf_libs = # Interface dependencies.
impl_libs = # Implementation dependencies.

import intf_libs += libboost-asio%lib{boost_asio}
import intf_libs += libimgui%lib{imgui}
import intf_libs += libquill%lib{quill}
import intf_libs += libzydis%lib{zydis}

lib{iw4x}: {hxx ixx txx cxx}{** -version} \
           {hxx            }{    version} \
           {def            }{**         } \
           {asm            }{**         } \
           $impl_libs $intf_libs $nasm

hxx{version}: in{version} $src_root/manifest

# Steam SDK unpackaged dependency
#
steam_sdk_root = $src_root/../upstream/steamworks/sdk

# Build options.
#
cxx.poptions =+ "-I$out_root" "-I$src_root" "-I$steam_sdk_root/include"

if ($config.libiw4x.develop)
  cxx.poptions += "-DLIBIW4X_DEVELOP"

# Shared headers.
#
if ($cxx.class == 'msvc')
  cxx.poptions =+ "/FI" "libiw4x/utility.hxx"            \
                  "/FI" "libiw4x/utility-win32.hxx"

if ($cxx.class == 'gcc')
  cxx.poptions =+ "-include" "libiw4x/utility.hxx"       \
                  "-include" "libiw4x/utility-win32.hxx"

if ($cxx.id == 'msvc')
  cxx.loptions += "/LIBPATH:$steam_sdk_root/lib"

if ($cxx.class == 'gcc')
  cxx.loptions += "-L$steam_sdk_root/lib"

lib{iw4x}: cxx.libs += $steam_sdk_root/lib/sdkencryptedappticket64.lib
lib{iw4x}: cxx.libs += $steam_sdk_root/lib/steam_api64.lib

obja{*}: cxx.poptions += -DLIBIW4X_STATIC_BUILD
objs{*}: cxx.poptions += -DLIBIW4X_SHARED_BUILD

# Export options.
#
lib{iw4x}: bin.lib.prefix = "lib"
lib{iw4x}:
{
  cxx.export.poptions = "-I$out_root" "-I$src_root" "-I$steam_sdk_root/include"
  cxx.export.libs = $intf_libs
}

# Export shared headers.
#
if ($cxx.class == 'msvc')
  lib{iw4x}: cxx.export.poptions =+ "/FI" "libiw4x/utility.hxx"       \
                                    "/FI" "libiw4x/utility-win32.hxx"

if ($cxx.class == 'gcc')
  lib{iw4x}: cxx.export.poptions =+ "-include" "libiw4x/utility.hxx"       \
                                    "-include" "libiw4x/utility-win32.hxx" \

if ($cxx.id == 'msvc')
  lib{iw4x}: cxx.export.loptions += "/LIBPATH:$steam_sdk_root/lib"

if ($cxx.class == 'gcc')
  lib{iw4x}: cxx.export.loptions += "-L$steam_sdk_root/lib"

lib{iw4x}: cxx.export.libs += $steam_sdk_root/lib/sdkencryptedappticket64.lib
lib{iw4x}: cxx.export.libs += $steam_sdk_root/lib/steam_api64.lib

liba{iw4x}: cxx.export.poptions += -DLIBIW4X_STATIC
libs{iw4x}: cxx.export.poptions += -DLIBIW4X_SHARED

# Install into the libiw4x/ subdirectory of, say, /usr/include/
# recreating subdirectories.
#
{hxx ixx txx}{*}:
{
  install         = include/libiw4x/
  install.subdirs = true
}
